<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vmac.WatBot.dashboard">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dashboard"
        android:textStyle="bold"
        android:textSize="30sp"
        android:paddingLeft="120dp"
        android:paddingTop="10dp"
        android:textColor="@color/color_one"
        />

    <ViewFlipper
        android:id="@+id/a"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"


        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:gravity="center"
        android:text="view">

    </ViewFlipper>

    <GridLayout
        android:elevation="20dp"
        android:layout_width="401dp"
        android:layout_height="366dp"
        android:layout_below="@+id/a"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"


        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:padding="10dp"
        android:rowCount="3">


        <ImageView
            android:id="@+id/count"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            app:srcCompat="@drawable/info"
            android:textColor="@color/color_one"

            android:layout_marginTop="2dp"
            android:clickable="true"
            android:text="\n\n          Daily\n     Updates" />

        <ImageView
            android:id="@+id/News"
            android:layout_width="100dp"
            android:layout_height="100dp"


            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="6dp"
            android:clickable="true"
            android:text="Tap"
            app:srcCompat="@drawable/rumor1"
            tools:srcCompat="@drawable/rumor1" />

        <ImageView
            android:id="@+id/Stress"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            app:srcCompat="@drawable/stress"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:text="Stress Managment" />


        <ImageView
            android:id="@+id/Helpline"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            app:srcCompat="@drawable/helpline"
            android:layout_marginTop="15dp"
            android:clickable="true"



            />
        <Button
            android:id="@+id/btn_bot"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:text="Chatbot"
            />
        <Button
            android:id="@+id/btn_bk"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:text="Logout"
            />


    </GridLayout>



</RelativeLayout>
